<?xml version="1.0" encoding="UTF-8"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="dev_banner_manager" class="Dev\Banner\Block\TopBannerWidget">
        <label translate="true">Banner Widget</label>

        <description translate="true">Display Banner</description>

        <parameters>
            <parameter name="auto" xsi:type="select" visible="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Automatically transition</label>
            </parameter>

            <parameter name="pager" xsi:type="select" visible="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Display pager</label>
            </parameter>

            <parameter name="speed" xsi:type="text" visible="true">
                <label translate="true">Slide transition duration (in ms)</label>
            </parameter>
        </parameters>
    </widget>
    <widget id="dev_banner_manager1" class="Dev\Banner\Block\BottomBannerWidget">
        <label translate="true">Bottom Banner Widget</label>

        <description translate="true">Display Banner</description>

        <parameters>
            <parameter name="auto" xsi:type="select" visible="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Automatically transition</label>
            </parameter>

            <parameter name="pager" xsi:type="select" visible="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Display pager</label>
            </parameter>

            <parameter name="speed" xsi:type="text" visible="true">
                <label translate="true">Slide transition duration (in ms)</label>
            </parameter>
        </parameters>
    </widget>
    <widget class="Dev\Banner\Block\Sample" id="banner_widget_sample">
        <label>Button</label>
        <description>Thêm button</description>
        <parameters>
            <parameter name="title" sort_order="10" visible="true" xsi:type="text" required="true">
                <label>Tiêu đề</label>
            </parameter>
            <parameter name="color" sort_order="20" visible="true" xsi:type="text" required="true">
                <label>Màu sắc</label>
            </parameter>
            <parameter name="width" sort_order="30" visible="true" xsi:type="text" required="true">
                <label>Chiều rộng</label>
            </parameter>
            <parameter name="height" sort_order="40" visible="true" xsi:type="text" required="true">
                <label>Chiều dài</label>
            </parameter>
        </parameters>
    </widget>
</widgets>




