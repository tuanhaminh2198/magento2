<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">productcontent_add.productcontent_listing_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Post Information</item>
        <item name="reverseMetadataMerge" xsi:type="boolean">true</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back">
                <url path="productcontent/post/index"/>
                <class>back</class>
                <label translate="true">Back</label>
            </button>
            <button name="save">
                <url path="productcontent/post/addproductcontent"/>
                <class>primary</class>
                <label translate="true">Save</label>
            </button>
        </buttons>
        <namespace>productcontent_post_add</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>productcontent_add.productcontent_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="productcontent_listing_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="productcontent/post/addproductcontent"/>
        </settings>
        <dataProvider class="Dev\ProductContent\Model\Config\DataProvider" name="productcontent_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>product_content_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <settings>
            <label translate="true">Add New Product Content</label>
        </settings>

        <field name="status" sortOrder="23" component="Magento_Ui/js/form/element/single-checkbox-toggle-notice" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">1</item>
                    <item name="notices" xsi:type="array">
                        <item name="0" xsi:type="string" translate="true">Disable</item>
                        <item name="1" xsi:type="string" translate="true">Active</item>
                    </item>
                </item>
            </argument>
            <settings>
                <tooltip>
                    <description translate="true">Disable or Active</description>
                </tooltip>
                <dataType>boolean</dataType>
                <label translate="true">Status</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="display_area" formElement="select">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Display Area</label>
                <dataScope>display_area</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Dev\ProductContent\Ui\Component\Category\Listing\Column\Position"/>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>

        <fieldset name="general" sortOrder="20">
            <settings>
                <label/>
            </settings>
            <component component="Dev_ProductContent/js/form/element/block-chooser" name="block_chooser" sortOrder="10">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="requestParameter" xsi:type="string">entity_id</item>
                        <item name="dataUrlConfigPath" xsi:type="string">content_types.block.additional_data.chooserConfig.dataUrl</item>
                        <item name="modalName" xsi:type="string">ns = ${ $.ns }, index = productcontent_form_modal</item>
                        <item name="buttonTitle" xsi:type="string" translate="true">Get Product ID</item>
                        <item name="displayMetadata" xsi:type="boolean">false</item>
                    </item>
                </argument>
                <settings>
                    <imports>
                        <link name="id">${ $.ns }.${ $.ns }.general.entity_id:value</link>
                    </imports>
                </settings>
            </component>
<!--            <field name="product_id" formElement="hidden" sortOrder="20">-->
<!--                <settings>-->
<!--                    <dataType>text</dataType>-->
<!--                    <imports>-->
<!--                        <link name="value">${ $.ns }.${ $.ns }.modal.listing_product.columns.ids:lastSelected</link>-->
<!--                    </imports>-->
<!--                </settings>-->
<!--            </field>-->
<!--            <field name="template" formElement="select" sortOrder="30" component="Magento_PageBuilder/js/form/element/dependent-select">-->
<!--                <argument name="data" xsi:type="array">-->
<!--                    <item name="config" xsi:type="array">-->
<!--                        <item name="default" xsi:type="string">default</item>-->
<!--                    </item>-->
<!--                </argument>-->
<!--                <settings>-->
<!--                    <label translate="true">Template</label>-->
<!--                    <dataType>text</dataType>-->
<!--                    <validation>-->
<!--                        <rule name="required-entry" xsi:type="boolean">true</rule>-->
<!--                    </validation>-->
<!--                </settings>-->
<!--            </field>-->
        </fieldset>

        <modal name="productcontent_form_modal" sortOrder="30">
            <settings>
                <listens>
                    <link name="listing_product.listing_product.columns.ids:lastSelected">closeModal</link>
                </listens>
                <modalClass>pagebuilder-product-details-modal</modalClass>
                <options>
                    <option name="title" xsi:type="string" translate="true">Select Product</option>
                </options>
            </settings>
            <insertListing name="listing_product" sortOrder="10">
                <settings>
                    <externalData>entity_id</externalData>
                    <externalProvider>${ $.ns }.listing_product_data_source</externalProvider>
                    <loading>true</loading>
                    <selectionsProvider>${ $.ns }.${ $.ns }.columns.ids</selectionsProvider>
                    <autoRender>true</autoRender>
                    <dataScope>entity_id</dataScope>
                    <ns>listing_product</ns>
                    <dataLinks>
                        <imports>false</imports>
                        <exports>true</exports>
                    </dataLinks>
                    <listens>
                        <link name="listing_product.listing_product.columns.ids:lastSelected">save</link>
                    </listens>
                </settings>
            </insertListing>
        </modal>
<!--        <field name="product_id" formElement="input">-->
<!--            <settings>-->
<!--                <label translate="true">Product ID</label>-->
<!--                <dataType>text</dataType>-->
<!--                <visible>true</visible>-->
<!--            </settings>-->
<!--        </field>-->
        <field name="entity_id" formElement="input" sortOrder="20">
            <settings>
                <label translate="true">Product ID</label>
                <dataType>text</dataType>
                <imports>
                    <link name="value">${ $.ns }.${ $.ns }.modal.pagebuilder_block_select_grid.columns.ids:lastSelected</link>
                </imports>
            </settings>
        </field>
        <field name="content" formElement="wysiwyg">
            <argument name="data" xsi:type="array">
                <item name="input" xsi:type="string">textarea</item>
                <item name="config" xsi:type="array">
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="height" xsi:type="string">100px</item>
                        <item name="formElement" xsi:type="string">textarea</item>
                    </item>
                </item>
            </argument>
            <settings>
                <label>Content</label>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
    </fieldset>
</form>
